#:kivy 1.0.9

FloatLayout:
    canvas:
        Color:
            rgb: 1, 1, 1
        Rectangle:
            source: 'data/images/background.jpg'
            size: self.size

    BoxLayout:
        padding: 10
        spacing: 10
        size_hint: 1, None
        pos_hint: {'top': 1}
        height: 44
        Image:
            size_hint: None, None
            size: 24, 24
            source: 'data/logo/kivy-icon-24.png'

<SelectorWidget>:
    screen: screen_switch
    mix: mix_switch
    video: video_switch
    GridLayout:
        cols: 2
        canvas:
            Clear:
            Color:
                rgb: .5, .5, .5
            Rectangle:
                size: self.size
                pos: self.pos
        size: 200,200
        Switch:
            id: screen_switch
            on_active: root.set_screen()
        Label:
            text: 'Screens'
        Switch:
            id: mix_switch
            on_active: root.set_mix()
        Label:
            text: 'Mixer'
        Switch:
            id: video_switch
            on_active: root.set_video()
        Label:
            text: 'Video Matrix'
