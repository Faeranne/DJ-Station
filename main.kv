#:kivy 1.0.9

FloatLayout:
    canvas:
        Color:
            rgb: 1, 1, 1
        Rectangle:
            source: 'data/images/background.jpg'
            size: self.size

    BoxLayout:
        padding: 10
        spacing: 10
        size: 20,20
        height: 44
        Image:
            size_hint: None, None
            size: 24, 24
            source: 'data/logo/kivy-icon-24.png'

<SelectorWidget>:
    size_hint: .4,.4
    screen: screen_switch
    mix: mix_switch
    video: video_switch
    GridLayout:
        padding: 30
        size: root.size
        cols: 2
        canvas:
            Clear:
            Color:
                rgb: .5, .5, .5
            Rectangle:
                size: self.size
                pos: self.pos
        Switch:
            id: screen_switch
            on_active: root.set_screen()
        Label:
            text: 'Screens'
        Switch:
            id: mix_switch
            on_active: root.set_mix()
        Label:
            text: 'Mixer'
        Switch:
            id: video_switch
            on_active: root.set_video()
        Label:
            text: 'Video Matrix'
<ScreenWidget>:
    size_hint: .4,.6
    spacing: 10
    GridLayout:
        padding: 30
        size: root.size
        cols: 4
        canvas:
            Clear:
            Color:
                rgb: .3, .3, .3
            Rectangle:
                size: self.size
                pos: self.pos
        Label:
            text: 'Video'
        Label:
            text: 'Visualizer'
        Label:
            text: 'Karaoke'
        Label:
            text: 'Live'
        Button:
            text: '' + root.screen1_1_text
            on_press: root.screen1_1()
        Button:
            text: '' + root.screen1_2_text
            on_press: root.screen1_2()
        Button:
            text: '' + root.screen1_3_text
            on_press: root.screen1_3()
        Button:
            text: '' + root.screen1_4_text
            on_press: root.screen1_4()
        Button:
            text: '' + root.screen2_1_text
            on_press: root.screen2_1()
        Button:
            text: '' + root.screen2_2_text
            on_press: root.screen2_2()
        Button:
            text: '' + root.screen2_3_text
            on_press: root.screen2_3()
        Button:
            text: '' + root.screen2_4_text
            on_press: root.screen2_4()
        Button:
            text: '' + root.screen3_1_text
            on_press: root.screen3_1()
        Button:
            text: '' + root.screen3_2_text
            on_press: root.screen3_2()
        Button:
            text: '' + root.screen3_3_text
            on_press: root.screen3_3()
        Button:
            text: '' + root.screen3_4_text
            on_press: root.screen3_4()
        Button:
            text: '' + root.screen4_1_text
            on_press: root.screen4_1()
        Button:
            text: '' + root.screen4_2_text
            on_press: root.screen4_2()
        Button:
            text: '' + root.screen4_3_text
            on_press: root.screen4_3()
        Button:
            text: '' + root.screen4_4_text
            on_press: root.screen4_4()

<MixWidget>:
    size_hint: .4,.6
    StackLayout:
        padding: 30
        size: root.size
        orentation: 'horizontal'
        canvas:
            Color:
                rgb: .3, .3, .3
            Rectangle:
                size: self.size
                pos: self.pos
        Slider:
            orentation: 'vertical'
        Slider:
            orentation: 'vertical'
        Slider:
            orentation: 'vertical'
<VideoWidget>
    size_hint: .5,.6
    GridLayout:
        canvas:
            Color:
                rgb: .3, .3, .3
            Rectangle:
                size: self.size
                pos: self.pos
        padding: 30
        size: root.size
        cols: 4
        Button:
            text: 'hello'
        
